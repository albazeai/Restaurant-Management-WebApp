@model IEnumerable<Restaurant.Models.Table>

@{
    ViewData["Title"] = "GetUsedTables";
}

<h1>GetUsedTables</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableId)
            </th>  <th>
                @Html.DisplayNameFor(model => model.TableItems)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TableId)
            </td><td>
                @Html.DisplayFor(modelItem => item.TableItems)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TableId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TableId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TableId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
