@model IEnumerable<Restaurant.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1 class="bg-info text-light p-2 text-center">Scheduled Events</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="w-50">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="startDate">
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                @*<td>
                        <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.EventId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>

<div class="">
    <a class="btn btn-danger border border-white" asp-area="" asp-controller="Cashier" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            // check event dates if expired
            let dates = [];
            let today = new Date();
            $('.startDate').each(function (i, obj) {
                dates.push($(this).text())
                let date = new Date(dates[0]);
                let formatted = date.getFullYear() + "-" + (date.getMonth() + 1) + "-" + date.getDate();
                let todayFormatted = today.getFullYear() + "-" + (today.getMonth() + 1) + "-" + today.getDate();
                let d1 = new Date(formatted);
                let d2 = new Date(todayFormatted);
                if (d2.toString() >= d1.toString()) {
                    $(this).css("background-color", "red")
                }

            });

        });
    </script>
}