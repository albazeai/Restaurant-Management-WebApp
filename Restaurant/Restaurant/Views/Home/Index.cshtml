        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/image-1.jpg" class="d-block w-100" alt="..." style="width:100%; height:700px;">
        </div>
        <div class="carousel-item">
            <img src="~/images/image-2.jpg" class="d-block w-100" alt="..." style="width:100%; height:700px;">
        </div>
        <div class="carousel-item">
            <img src="~/images/musician-image-1.jpg" class="d-block w-100" alt="..." style="width:100%; height:700px;">
        </div>
        <div class="carousel-item">
            <img src="~/images/image-4.jpg" class="d-block w-100" alt="..." style="width:100%; height:700px;">
        </div>
        <div class="carousel-item">
            <img src="~/images/image-5.jpg" class="d-block w-100" alt="..." style="width:100%; height:700px;">
        </div>
        <div class="carousel-item">
            <img src="~/images/image-6.jpg" class="d-block w-100" alt="..." style="width:100%; height:700px;">
        </div>
        <div class="carousel-item">
            <img src="~/images/karaoke-image-1.jpg" class="d-block w-100" alt="..." style="width:100%; height:700px;">
        </div>
        <div class="carousel-item">
            <img src="~/images/image-7.jpg" class="d-block w-100" alt="..." style="width:100%; height:700px;">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="text-center bg-info p-3 text-light">
    <h1 class="display-4" id="events">Restaurant Events</h1>
</div>

<hr class="w-50 mb-5 mt-5">
@{int count = 0; }
@foreach (var item in Model)
{
    count++;
    if (count % 2 == 0)
    {
        <div class="row">
            <div class="col-sm-12 col-md-6">
                @{
                    try
                    {
                        var base64 = Convert.ToBase64String(item.EventImage);
                        var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                        <img src='@imgSrc' class="shadow-lg p-3 mb-5 bg-white rounded" style="width:100%;height:500px" />
                    }
                    catch (Exception) { }
                }
            </div>
            <div class="col-sm-12 col-md-6">
                <h2 class="display-4 sub-header">@Html.DisplayFor(modelItem => item.Title)</h2>
                <p class="text-monospace text-break p-2" style="font-size:14pt">@Html.DisplayFor(modelItem => item.Description)</p>
                @if (item.ReservationRequired)
                {
                    <h3>Reservation Required: <span class="text-danger">Yes</span></h3>
                }
                else
                {
                    <h3>Reservation Required: <span class="text-danger">No</span></h3>
                }
                <h3 class="alert alert-success text-dark mt-5">Starts: @Html.DisplayFor(modelItem => item.StartDate)</h3>
            </div>
        </div>
        <hr class="w-50 mb-5 mt-5">

    }
    else
    {
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <h2 class="display-4 sub-header">@Html.DisplayFor(modelItem => item.Title)</h2>
                <p class="text-monospace text-break p-2" style="font-size:14pt">@Html.DisplayFor(modelItem => item.Description)</p>
                @if (item.ReservationRequired)
                {
                    <h3>Reservation Required: <span class="text-danger">Yes</span></h3>
                }
                else
                {
                    <h3>Reservation Required: <span class="text-danger">No</span></h3>
                }
                <h3 class="alert alert-success text-dark mt-5">Starts: @Html.DisplayFor(modelItem => item.StartDate)</h3>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="">
                    @{
                        try
                        {
                            var base64 = Convert.ToBase64String(item.EventImage);
                            var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                            <img src='@imgSrc' class="shadow-lg p-3 mb-5 bg-white rounded" style="width:100%;height:500px" />
                        }
                        catch (Exception) { }
                    }
                </div>
            </div>
        </div>
        <hr class="w-50 mb-5 mt-5">
    }


}

<div class="jumbotron">
    <h1 id="contactUs" class="display-4 text-center" style="color:darkred">Contact Us</h1>
    <p class="lead text-center">Give us a call today to make Order / Reservation for one of the listed events above.</p>
    <hr class="my-4">
    <h2 class="text-center">&#128222; <a href="tel:+1-905-154-242" class="active">+1-905-154-242</a></h2>
</div>

