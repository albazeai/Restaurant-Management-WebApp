@model Restaurant.Models.Drink

@{
    ViewData["Title"] = "Details";
}

<h1>Drink Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DrinkName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DrinkName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DrinkImage)
        </dt>
        <dd class="col-sm-10">
            @{
                try
                {
                    var base64 = Convert.ToBase64String(Model.DrinkImage);
                    var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                    <img src='@imgSrc' style="max-width:500px;max-height:500px" />
                }
                catch (Exception)
                {


                }

            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.DrinkId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
