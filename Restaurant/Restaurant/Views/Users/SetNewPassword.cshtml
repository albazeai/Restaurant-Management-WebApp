@model Restaurant.Models.ApplicationUser

@{
    ViewData["Title"] = "SetNewPassword";

}

<h1>Set New Password For <span class="text-success">@Model.FirstName @Model.LastName</span> :</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="SetNewPassword">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>New Password, Default: (Password!1)</label>
                <input name="password" type="password" class="form-control" value="Password!1" />
                <span class="text-danger">@ViewBag.ErrorMessage</span>
            </div>
            <button type="submit" class="btn btn-success">Set password</button>
        </form>
    </div>
</div>
<hr />
<a class="btn btn-primary" asp-area="" asp-controller="Users" asp-action="Index">Cancel</a>
