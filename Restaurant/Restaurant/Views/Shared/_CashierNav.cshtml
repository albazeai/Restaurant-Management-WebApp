
@using Restaurant.Data;
@inject ApplicationDbContext _context


@{
    ViewData["Title"] = "_CashierNav";
    var linkColor = "text-light";
}


<ul class="navbar-nav  flex-grow-1">
    <li class="nav-item">
        <select class="form-control btn btn-success custom-select custom-select-lg" id="tableSelecterIndex">
            <option>Tables in Use</option>
            @{
                try
                {
                    var tables = _context.Tables.Where(x => x.TableItems != null);
                    foreach (Table item in tables)
                    {
                        <option value="@item.TableId">Table - @item.TableId</option>
                    }
                }
                catch (NullReferenceException)
                {

                }

            }

        </select>
    </li>
    <li class="nav-item">
        <a class="nav-link @linkColor" asp-area="" asp-controller="Cashier" asp-action="Index">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @linkColor" asp-area="" asp-controller="Cashier" asp-action="AddOrder">Add Order</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @linkColor" asp-area="" asp-controller="Cashier" asp-action="CashOrderStatus">Order-Status<span id="completedOrders" class="badge badge-danger m-1"></span></a>

    </li>
    <li class="nav-item">
        <a class="nav-link @linkColor" asp-area="" asp-controller="Reservations" asp-action="Index">Reservations</a>
    </li>
</ul>
